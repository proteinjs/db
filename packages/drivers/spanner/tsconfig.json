{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@proteinjs/db-driver-spanner": ["index.ts"],
      "@proteinjs/db-driver-spanner/*": ["src/*"],
      "@proteinjs/db-driver-spanner/test": ["test/index.ts"]
    }
  }
}
